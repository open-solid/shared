{
    "name": "open-solid/core",
    "type": "symfony-bundle",
    "license": "MIT",
    "description": "Building Blocks for Modular Architecture with Symfony",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4",
        "open-solid/bus": "^1.1",
        "symfony/uid": "^7.0|^8.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^3.1",
        "doctrine/orm": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpunit/phpunit": "^12.5",
        "symfony/framework-bundle": "^8.0",
        "symfony/messenger": "^8.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenSolid\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSolid\\Core\\Tests\\": "tests/"
        }
    }
}
